                <SwitchCell Text="Classical"></SwitchCell>
                <SwitchCell Text="Rock"></SwitchCell>
                <SwitchCell Text="Metal"></SwitchCell>
                <SwitchCell Text="Country"></SwitchCell>
                <SwitchCell Text="Pop"></SwitchCell>
                <SwitchCell Text="Rap"></SwitchCell>
                <SwitchCell Text="Electronic"></SwitchCell>
                <SwitchCell Text="Cultural"></SwitchCell>
                <SwitchCell Text="Other"></SwitchCell>
            </sv:Section>
            <sv:Section Title="Preferred Instrument">
                <SwitchCell Text="Vocals"></SwitchCell>
                <SwitchCell Text="Guitar"></SwitchCell>
                <SwitchCell Text="Drums"></SwitchCell>
                <SwitchCell Text="Bass"></SwitchCell>
                <SwitchCell Text="Piano"></SwitchCell>
                <SwitchCell Text="Violin"></SwitchCell>
                <SwitchCell Text="Synth"></SwitchCell>
                <SwitchCell Text="Other"></SwitchCell>
