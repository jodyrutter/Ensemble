 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ensemble"
        android:layout_width="100dp"
        android:layout_height="100dp"
    />
    

    <!-- Email -->
    <android.support.design.widget.TextInputLayout
        android:layout_below = "@+id/icon"
        android:id="@+id/signup_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Enter your Email"
            android:id="@+id/signup_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    
    <!-- Password-->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/signup_input_email"
        android:id="@+id/signup_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Enter your Password"
            android:id="@+id/signup_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    

    <!-- Username-->
    <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/signup_input_password"
            android:id="@+id/signup_input_username"
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:minWidth="25px"
            android:minHeight="25px">
            <EditText
                android:hint="Enter Username"
                android:id = "@+id/signup_username"
                android:inputType= "textCapWords"
                android:maxLines= "1"
                android:layout_width= "match_parent"
                android:layout_height = "wrap_content"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/signup_username"
            android:id="@+id/signup_input_age"
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:minWidth="25px"
        android:layout_marginTop= "275dp"
            android:minHeight="25px">
            <EditText
                android:hint="Enter Age"
                android:id = "@+id/signup_age"
                android:inputType= "textCapWords"
                android:maxLines= "1"
                android:layout_width= "match_parent"
                android:layout_height = "wrap_content"/>
    </android.support.design.widget.TextInputLayout>
                       <!-- Bio-->
    <android.support.design.widget.TextInputLayout
            android:layout_below="@id/signup_input_age"
            android:id="@+id/signup_input_bio"
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:minWidth="25px"
            android:minHeight="25px">
            <EditText
                android:hint="Enter Short Bio"
                android:id = "@+id/signup_bio"
                android:inputType= "textCapWords"
                android:maxLines= "1"
                android:layout_width= "match_parent"
                android:layout_height = "wrap_content"/>
    </android.support.design.widget.TextInputLayout>
                        <!-- YLink-->
    <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/signup_input_bio"
            android:id="@+id/signup_input_ylink"
            android:layout_width = "match_parent"
            android:layout_height= "wrap_content"
            android:minWidth="25px"
            android:minHeight="25px">
            <EditText
                android:hint="Submit Youtube link"
                android:id = "@+id/signup_ylink"
                android:inputType= "textUri"
                android:maxLines= "1"
                android:layout_width= "match_parent"
                android:layout_height = "wrap_content"/>
    </android.support.design.widget.TextInputLayout>
                
    <!-- Spinner-->
    <fr.ganfra.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/instrumentSpinner"
        android:layout_below= "@+id/signup_input_ylink"
        app:ms_enableFloatingLabel = "true"
        app:ms_floatingLabelText = "Select Favorite Instrument"
        app:ms_hint = "Select Instrument"
        app:ms_alignLabels = "true"
        />

    
                <!-- Register button -->
    <Button
        android:layout_below="@+id/instrumentSpinner"
        android:id="@+id/signup_btn_register"
        android:text="Register"
        android:background="#263238"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored" />

    <TextView
        android:layout_below="@+id/signup_btn_register"
        android:id="@+id/signup_btn_login"
        android:text="Already have account? Login"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimaryDark" />
    
</RelativeLayout>